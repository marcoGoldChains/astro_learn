---
import Header from '../components/Header.astro';

interface Props { //Typescript
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-800 min-h-screen pb-32">
		<Header />
		<main class="max-w-5xl px-4 m-auto">
			<slot />
		</main>
			
	</body>
</html>
<style is:global>
	
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
		color-scheme: dark light; 
	}
	
</style>
<!--Con la propiedad color-scheme 
	lo que hacemos es decir que por defecto el texto 
	sea del color adecuado (light), ya que le estamos diciendo que	
	queremos utilizar el modo oscuro (luego esto pues
	ya se cambia dependiendo de la necesidad)-->